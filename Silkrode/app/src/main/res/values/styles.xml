<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary Color -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>

        <!-- Surface Color -->
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Background Color -->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- StatusBar Background Color -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <!-- TextView -->
    <style name="SilkRodeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="SilkRodeTextView.Headline" parent="SilkRodeTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SilkRodeTextView.SubTitle1" parent="SilkRodeTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SilkRodeTextView.SubTitle2" parent="SilkRodeTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SilkRodeTextView.Caption" parent="SilkRodeTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
</resources>
