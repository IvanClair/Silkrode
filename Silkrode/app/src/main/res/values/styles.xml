<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Color -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>

        <!-- Surface Color -->
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Background Color -->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- StatusBar Background Color -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <!-- TextView -->
    <style name="SilkRodeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="SilkRodeTextView.ArtistName" parent="SilkRodeTextView">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SilkRodeTextView.PodcastName" parent="SilkRodeTextView">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="SilkRodeTextView.CollectionTitle" parent="SilkRodeTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SilkRodeTextView.ContentTitle" parent="SilkRodeTextView">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SilkRodeTextView.ContentDescription" parent="SilkRodeTextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2
        </item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="SilkRodeTextView.DateInformation" parent="SilkRodeTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!-- CardView -->
    <style name="SilkRodeCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="SilkRodeCardView.FullWidth" parent="SilkRodeCardView">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <!--  Audio Control ImageView  -->
    <style name="SilkRodeAudioControlImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <!--  ProgressBar on AppBarLayout  -->
    <style name="SilkRodeProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>
</resources>
